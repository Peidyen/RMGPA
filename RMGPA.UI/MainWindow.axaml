<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RMGPA.UI.MainWindow"
        Title="RMGPA Simulation"
        Width="600" Height="700">
    <StackPanel>
        <Button Name="StartButton" Content="Start Simulation" Width="200" Margin="10"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="600">
            <TextBlock Name="OutputText"
                       FontFamily="Consolas"
                       FontSize="12"
                       Padding="10"
                       TextWrapping="Wrap"/>
        </ScrollViewer>
    </StackPanel>
</Window>
